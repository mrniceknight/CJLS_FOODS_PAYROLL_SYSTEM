<Page
    x:Class="CJLS_FOODS_PAYROLL_SYSTEM.Views.Employee.EmployeeList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CJLS_FOODS_PAYROLL_SYSTEM.Views.Employee"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EmployeeCreateNewEmployee"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <materialDesign:DialogHost>
        <materialDesign:DialogHost.DialogContent>
            <StackPanel Margin="50">
                <TextBox
                    materialDesign:HintAssist.Hint="First Name"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Employee.FirstName}" />
                <TextBox
                    materialDesign:HintAssist.Hint="Last Name"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Employee.FirstName}" />
                <DatePicker
                    materialDesign:HintAssist.Hint="Date Of Birth"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                    Text="{Binding Employee.FirstName}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" Text="Male" />
                        <RadioButton
                            x:Name="rdButtonMale"
                            Checked="RdButtonMale_Checked"
                            Style="{StaticResource MaterialDesignRadioButton}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock
                            Grid.Column="2"
                            Style="{StaticResource MaterialDesignBody1TextBlock}"
                            Text="Female" />
                        <RadioButton
                            x:Name="rdButtonFemale"
                            Grid.Column="3"
                            Checked="RdButtonFemale_Checked"
                            Style="{StaticResource MaterialDesignRadioButton}" />
                    </StackPanel>
                </Grid>
                <TextBox materialDesign:HintAssist.Hint="Contact Number" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Click="Btn_createNewEmployee_Click"
                        Command="materialDesign:DialogHost.CloseDialogCommand"
                        IsDefault="True"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.CommandParameter>
                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                True
                            </system:Boolean>
                        </Button.CommandParameter>
                        ACCEPT
                    </Button>
                    <Button
                        Command="materialDesign:DialogHost.CloseDialogCommand"
                        IsCancel="True"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.CommandParameter>
                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                False
                            </system:Boolean>
                        </Button.CommandParameter>
                        CANCEL
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="65*" />
                <RowDefinition Height="323*" />
                <RowDefinition Height="62*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Margin="0,1.2,0,0.2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="74*" />
                    <ColumnDefinition Width="655*" />
                    <ColumnDefinition Width="70*" />
                </Grid.ColumnDefinitions>
                <GroupBox
                    Grid.Column="1"
                    FontSize="24"
                    Header="Employee List">
                    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Employees}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Remarks}" Header="EmployeeID" />
                            <DataGridTextColumn Binding="{Binding FirstName}" Header="First Name" />
                            <DataGridTextColumn Binding="{Binding MiddleName}" Header="Middle Name" />
                            <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                            <DataGridTextColumn Binding="{Binding EmployeeType.EmployeeNameTitle}" Header="Job Position" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
            <Button
                x:Name="btn_createNewEmployee"
                Grid.Row="2"
                Margin="744,4.8,0,1.6"
                Click="Btn_createNewEmployee_Click_1"
                Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
                ToolTip="Add New Employee">
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Kind="Add" />
            </Button>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="17*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Page>
