<Page
    x:Class="CJLS_FOODS_PAYROLL_SYSTEM.Views.Employee.Attendance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CJLS_FOODS_PAYROLL_SYSTEM.Views.Employee"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Attendance"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource AttendanceViewModel}"
    mc:Ignorable="d">
    <materialDesign:DialogHost x:Name="dialogHost">
        <materialDesign:DialogHost.DialogContent>
            <StackPanel Margin="50">
                <TextBlock
                    x:Name="DialogHeader"
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                    Text="Header" />
                <StackPanel x:Name="sp_dialogFields">
                    <ComboBox
                        materialDesign:HintAssist.Hint="Deduction Type"
                        DisplayMemberPath="DeductionName"
                        ItemsSource="{Binding DeductionsTypes}"
                        SelectedItem="{Binding Deduction.DeductionsType}"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Amount"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding Deduction.Amount}" />
                    <TextBlock />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        x:Name="btn_dialogConfirm"
                        Click="Btn_dialogConfirm_Click"
                        Command="materialDesign:DialogHost.CloseDialogCommand"
                        IsDefault="True"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.CommandParameter>
                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                True
                            </system:Boolean>
                        </Button.CommandParameter>
                        ACCEPT
                    </Button>
                    <Button
                        Command="materialDesign:DialogHost.CloseDialogCommand"
                        IsCancel="True"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.CommandParameter>
                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                False
                            </system:Boolean>
                        </Button.CommandParameter>
                        CANCEL
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:DialogHost.DialogContent>
        <Grid Margin="0,0,0,-0.4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="9*" />
            </Grid.ColumnDefinitions>
            <DataGrid
                Name="DataGridCalendar"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserResizeRows="False"
                CurrentCellChanged="DataGridCalendar_CurrentCellChanged"
                ItemsSource="{Binding Month.Weeks}"
                SelectedCellsChanged="DataGridCalendar_SelectedCellsChanged"
                SelectedItem="{Binding SelectedWeek}"
                SelectionMode="Extended">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="1*" Header="Sunday">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Name="Sunday">
                                    <TextBlock Text="{Binding Days[0].AttendanceDate.Day}" />
                                    <Rectangle
                                        x:Name="Regular"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Green"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="OverTime"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Blue"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="Deduction"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Red"
                                        Visibility="Collapsed" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="1*" Header="Monday">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel x:Name="Monday">
                                    <TextBlock Text="{Binding Days[1].AttendanceDate.Day}" />
                                    <Rectangle
                                        x:Name="Regular"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Green"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="OverTime"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Blue"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="Deduction"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Red"
                                        Visibility="Collapsed" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="1*" Header="Tuesday">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel x:Name="Tuesday">
                                    <TextBlock Text="{Binding Days[2].AttendanceDate.Day}" />
                                    <Rectangle
                                        x:Name="Regular"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Green"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="OverTime"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Blue"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="Deduction"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Red"
                                        Visibility="Collapsed" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="1*" Header="Wednesday">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel x:Name="Wednesday">
                                    <TextBlock Text="{Binding Days[3].AttendanceDate.Day}" />
                                    <Rectangle
                                        x:Name="Regular"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Green"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="OverTime"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Blue"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="Deduction"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Red"
                                        Visibility="Collapsed" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="1*" Header="Thursday">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel x:Name="Thursday">
                                    <TextBlock Text="{Binding Days[4].AttendanceDate.Day}" />
                                    <Rectangle
                                        x:Name="Regular"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Green"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="OverTime"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Blue"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="Deduction"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Red"
                                        Visibility="Collapsed" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="1*" Header="Friday">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel x:Name="Friday">
                                    <TextBlock Text="{Binding Days[5].AttendanceDate.Day}" />
                                    <Rectangle
                                        x:Name="Regular"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Green"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="OverTime"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Blue"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="Deduction"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Red"
                                        Visibility="Collapsed" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="1*" Header="Saturday">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel x:Name="Saturday">
                                    <TextBlock Text="{Binding Days[6].AttendanceDate.Day}" />
                                    <Rectangle
                                        x:Name="Regular"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Green"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="OverTime"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Blue"
                                        Visibility="Collapsed" />
                                    <Rectangle
                                        x:Name="Deduction"
                                        Width="Auto"
                                        Height="20"
                                        Fill="Red"
                                        Visibility="Collapsed" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Column="1">
                <GroupBox Margin="0,0,0,-0.4" Header="Attendance Details">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="195*" />
                            <RowDefinition Height="135*" />
                            <RowDefinition Height="68*" />
                        </Grid.RowDefinitions>
                        <GroupBox Margin="0,0,0.4,3.2" Header="Deductions">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="39*" />
                                    <RowDefinition Height="8*" />
                                </Grid.RowDefinitions>
                                <DataGrid
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    CanUserResizeRows="False"
                                    ItemsSource="{Binding .Deductions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding DeductionsType.DeductionName}" Header="Description" />
                                        <DataGridTextColumn Binding="{Binding Amount}" Header="Amount" />
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <TextBlock Text="Total Deductions: " />
                                    <TextBlock Text="{Binding Deductions}" />
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        <materialDesign:PopupBox
                            Grid.Row="2"
                            Width="56"
                            Height="56"
                            Margin="0,0,0.4,0.4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            PlacementMode="TopAndAlignCentres"
                            Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                            ToolTip="PopupBox, Style MaterialDesignMultiFloatingActionPopupBox"
                            ToolTipService.Placement="Right">
                            <StackPanel>
                                <Button Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" ToolTip="Add Deduction">
                                    <materialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Kind="AlphabetD" />
                                </Button>
                                <Button
                                    Name="btn_saveAttendance"
                                    Click="Btn_saveAttendance_Click"
                                    ToolTip="Save Attendance">
                                    <materialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Kind="ContentSaveAll" />
                                </Button>
                            </StackPanel>
                        </materialDesign:PopupBox>
                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Vertical">
                                <TextBox
                                    Name="txtbox_regularHours"
                                    materialDesign:HintAssist.Hint="Regular Hours Worked"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    Text="{Binding Attendance.NumOfHoursWorked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextChanged="Txtbox_regularHours_TextChanged" />
                                <TextBox
                                    Name="txtbox_overtimeHours"
                                    materialDesign:HintAssist.Hint="Overtime Hours Worked"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    Text="{Binding Attendance.OverWorkedHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextChanged="Txtbox_overtimeHours_TextChanged" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Page>
