<Page
    x:Class="CJLS_FOODS_PAYROLL_SYSTEM.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CJLS_FOODS_PAYROLL_SYSTEM"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Home"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource HomeViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Image
            Width="300"
            Height="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/CJLS FOODS LOGO.jpg" />
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource MaterialDesignDisplay3TextBlock}">
            <Run Text="Welcome " />
            <Run Text="{Binding User.FullName}" />
        </TextBlock>
    </Grid>
</Page>
